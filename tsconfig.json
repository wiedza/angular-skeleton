{
    "compilerOptions": {
        "module": "system",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "target": "es5",
        "typeRoots": [
        "node_modules/@types"
        ],
        "outFile": "target/tsc.js",
        "sourceMap": true
    },
    "include": [
        "src/js/**/*",
        "node_modules/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}